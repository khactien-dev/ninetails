{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "monorepo": true,
  "root": "apps",
  "projects": {
    "form-request-service": {
      "type": "application",
      "root": "apps/form-request-service",
      "entryFile": "main",
      "sourceRoot": "apps/form-request-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/form-request-service/tsconfig.app.json"
      }
    },
    "base-metric-service": {
      "type": "application",
      "root": "apps/base-metric-service",
      "entryFile": "main",
      "sourceRoot": "apps/base-metric-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/base-metric-service/tsconfig.app.json"
      }
    },
    "location-service": {
      "type": "application",
      "root": "apps/location-service",
      "entryFile": "main",
      "sourceRoot": "apps/location-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/location-service/tsconfig.app.json"
      }
    },
    "libs": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "user-service": {
      "type": "application",
      "root": "apps/user-service",
      "entryFile": "main",
      "sourceRoot": "apps/user-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-service/tsconfig.app.json",
        "watchAssets": true,
        "assets": [
          "mail/templates/**/*"
        ]
      }
    },
    "notification-service": {
      "type": "application",
      "root": "apps/notification-service",
      "entryFile": "main",
      "sourceRoot": "apps/notification-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-service/tsconfig.app.json"
      }
    },
    "master-service": {
      "type": "application",
      "root": "apps/master-service",
      "entryFile": "main",
      "sourceRoot": "apps/master-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/master-service/tsconfig.app.json"
      }
    }
  }
}